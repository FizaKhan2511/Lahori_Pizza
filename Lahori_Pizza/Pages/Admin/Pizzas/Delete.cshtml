@page
@model Lahori_Pizza.PagesPizzas.DeleteModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete pizza</title>
</head>
<body>

<h3>Are you sure you want to delete this pizza?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.vegetarien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.vegetarien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.ingredient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.ingredient)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pizza.PizzaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
</body>
</html>

 <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
